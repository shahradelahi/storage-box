{
  "name": "storage-box",
  "version": "0.3.0",
  "description": "A memory-based keyâ€“value storage for javascript.",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "test": "mocha \"**/*.test.ts\"",
    "type-check": "tsc --noEmit",
    "format:check": "prettier --check \"**/*.{ts,md}\"",
    "format": "prettier --write .",
    "ci:publish": "npm build && changeset publish",
    "prepublishOnly": "pnpm test && pnpm run format:check && pnpm run type-check && pnpm build"
  },
  "packageManager": "pnpm@8.15.1",
  "dependencies": {
    "@msgpack/msgpack": "3.0.0-beta2",
    "debounce": "^2.0.0",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@types/chai": "^4.3.14",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.12.7",
    "chai": "^5.1.0",
    "mocha": "^10.4.0",
    "prettier": "^3.2.5",
    "tsup": "^8.0.2",
    "tsx": "^4.7.2",
    "typescript": "^5.4.5"
  },
  "license": "MIT",
  "author": "Shahrad Elahi <shahrad@litehex.com> (https://github.com/shahradelahi)",
  "contributors": [
    "Seven Du <shiweidu@outlook.com> (https://github.com/medz)"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/shahradelahi/storage-box.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "storage",
    "key-value",
    "memory",
    "browser",
    "nodejs",
    "litehex"
  ]
}
